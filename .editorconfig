# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[*.{yml,yaml}]
indent_size = 2

[*.{bat,cmd,ps1}]
indent_style = tab
end_of_line = crlf

[*.{ini,cfg}]
indent_style = tab

[{.flake8,Makefile}]
indent_style = tab
